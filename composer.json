{
    "name": "alleyinteractive/wp-path-dispatch",
    "description": "Simply and easily add a URL which fires an action, triggers a callback, and/or loads a template.",
    "license": "GPL-2.0-or-later",
    "type": "library",
    "keywords": [
        "alleyinteractive",
        "wp-path-dispatch"
    ],
    "authors": [
        {
            "name": "Matt Boynes",
            "email": "info@alley.com"
        }
    ],
    "homepage": "https://github.com/alleyinteractive/wp-path-dispatch",
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "alleyinteractive/alley-coding-standards": "^1.0",
        "mantle-framework/testkit": "^0.10 || ^0.11",
        "nunomaduro/collision": "^5.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "files": [
            "src/class-path-dispatch.php",
            "src/helpers.php"
        ]
    },
    "config": {
        "allow-plugins": {
            "alleyinteractive/composer-wordpress-autoloader": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "wordpress-autoloader": {
            "autoload-dev": {
                "WP_Path_Dispatch\\Tests\\": "tests"
            }
        }
    },
    "scripts": {
        "phpcbf": "phpcbf .",
        "phpcs": "phpcs .",
        "phpunit": "phpunit",
        "test": [
            "@phpcs",
            "@phpunit"
        ]
    }
}
